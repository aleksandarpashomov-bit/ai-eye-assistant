<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow the app to be run from any location -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Required for Electron apps -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Allow loading unsigned libraries (needed for some native modules) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Required for screen capture functionality -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Network access for API calls -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Required for hardened runtime -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
</dict>
</plist>
